#!/usr/bin/env bash

ENV_DIR=${3:-}
build_dir=${1:-}
npmrc="$(cat $ENV_DIR/NPMRC)"

if [ "$npmrc" != "" ]; then
	echo "-----> Using .npmrc from config var NPMRC"
	echo "$npmrc" > "$build_dir/.npmrc"
	
	npm install @tjekvik/fantastic-guide@0.1.17

  echo "DEBUG"
  echo "$npmrc"

  echo "DEBUG CAT"
  echo "$(cat $build_dir/.npmrc)"
  
  echo "npm whoami"
  echo "$(npm whoami)"
	exit 0
fi
